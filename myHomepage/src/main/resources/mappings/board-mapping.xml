<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDAO">
	<resultMap id="boardResult" type="boardVO">
		<id property="seq" column="SEQ"/>
		<result property="title" column="TITLE"/>
		<result property="writer" column="WRITER"/>
		<result property="content" column="CONTENT"/>
		<result property="regDate" column="REGDATE"/>
		<result property="updateDate" column="UPDATEDATE"/>
		<result property="cnt" column="CNT"/>
	</resultMap>

	<sql id="pageVO">
		<trim prefix="(" suffix=") AND ">
			<choose>
				<when test="type == 'T'.toString()">
					TITLE LIKE CONCAT('%', #{keyword}, '%')
				</when>
				<when test="type == 'C'.toString()">
					CONTENT LIKE CONCAT('%', #{keyword}, '%')
				</when>
				<when test="type == 'W'.toString()">
					WRITER LIKE CONCAT('%', #{keyword}, '%')
				</when>
			</choose>
		</trim>
	</sql>
	
	<insert id="insertBoard" parameterType="boardVO">
		<![CDATA[
			INSERT INTO BOARD
				(title, writer, content)
			VALUES
				(#{title}, #{writer}, #{content})		
		]]>
		<selectKey resultType="int" keyProperty="seq" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>

	<update id="updateBoard">
		<![CDATA[
			UPDATE
				BOARD
			SET
				TITLE = #{title},
				CONTENT = #{content},
				UPDATEDATE = CURDATE()
			WHERE
				SEQ = #{seq}
		]]>
	</update>

	<delete id="deleteBoard">
		<![CDATA[
			DELETE FROM BOARD
			WHERE SEQ = #{seq}
		]]>
	</delete>
	
	<select id="getBoard" resultType="boardVO">
		<![CDATA[
			SELECT
				*
			FROM
				BOARD
			WHERE
				SEQ = #{seq}
		]]>
	</select>

	<select id="getListWithPaging" resultMap="boardResult">
		<![CDATA[
			SELECT
				*
			FROM
				(
					SELECT @ROWNUM:=0
				) TMP,
				(
					SELECT
						@ROWNUM:=@ROWNUM + 1 AS NUM, SEQ, TITLE, WRITER, CONTENT, REGDATE, UPDATEDATE
					FROM
						BOARD
					WHERE
		]]>
		
		<include refid="pageVO"></include>
		
		<![CDATA[
					@ROWNUM <= #{pageNum} * #{amount}
				) RN
			WHERE
				NUM > (#{pageNum} - 1) * #{amount}
		]]>
	</select>
	
	<select id="getTotalCount" resultType="int">
		<![CDATA[
			SELECT 
				COUNT(*)
			FROM 
				BOARD
			WHERE	
				SEQ > 0
		]]>
	</select>
	
	<select id="getReplyListData" resultType="replyVO">
		<![CDATA[
			SELECT
				RNO,
				SEQ,
				PARENT_ID,
				DEPTH,
				REPLY,
				REPLYER,
				REPLY_PASSWORD
			FROM
				REPLY
			WHERE
				SEQ = #{seq}
			ORDER BY RNO ASC
		]]>
	</select>
</mapper>
