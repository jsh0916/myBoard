<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AttachDAO">

	<insert id="insertAttach">
		<![CDATA[
			INSERT INTO ATTACH (
				UUID,
				UPLOADPATH,
				FILENAME,
				FILETYPE,
				SEQ
			) VALUES (
				#{uuid},
				#{uploadPath},
				#{fileName},
				#{fileType},
				#{seq},
			)
		]]>
	</insert>

	<delete id="deleteAttach">
		<![CDATA[
			DELETE
			FROM
				ATTACH
			WHERE
				UUID = #{uuid}
		]]>
	</delete>
	
	<select id="findByBno" resultType="attachFileVO">
		<![CDATA[
			SELECT
				*
			FROM
				ATTACH
			WHERE
				SEQ = #{seq}
		]]>
	</select>
</mapper>
